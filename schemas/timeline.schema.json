{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/timeline.schema.json",
  "title": "Timeline",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "fps": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "width": {
      "type": "integer",
      "minimum": 16
    },
    "height": {
      "type": "integer",
      "minimum": 16
    },
    "tracks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "video",
              "image",
              "audio",
              "overlay",
              "subtitle"
            ]
          },
          "clips": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "type": {
                  "type": "string"
                },
                "src": {
                  "type": "string"
                },
                "start": {
                  "type": "number",
                  "minimum": 0
                },
                "duration": {
                  "type": [
                    "number",
                    "null"
                  ],
                  "exclusiveMinimum": 0
                },
                "fit": {
                  "type": "string",
                  "enum": [
                    "cover",
                    "contain",
                    "fill"
                  ]
                }
              },
              "discriminator": {
                "propertyName": "type"
              },
              "required": [
                "type"
              ]
            }
          }
        },
        "required": [
          "clips",
          "type"
        ],
        "discriminator": {
          "propertyName": "type"
        }
      }
    }
  }
}