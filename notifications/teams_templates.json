{
  "deployment_started": {
    "@type": "MessageCard",
    "@context": "http://schema.org/extensions",
    "themeColor": "0076D7",
    "summary": "MOBIUS Deployment Started",
    "sections": [
      {
        "activityTitle": "üöÄ MOBIUS Deployment Started",
        "activitySubtitle": "Environment: {{environment}}",
        "facts": [
          {
            "name": "Deploy Operator",
            "value": "{{deploy_operator}}"
          },
          {
            "name": "Git Commit",
            "value": "{{git_commit}}"
          },
          {
            "name": "Git Branch",
            "value": "{{git_branch}}"
          },
          {
            "name": "Started At",
            "value": "{{timestamp}}"
          }
        ]
      }
    ],
    "potentialAction": [
      {
        "@type": "OpenUri",
        "name": "View Artifacts",
        "targets": [
          {
            "os": "default",
            "uri": "{{artifacts_url}}"
          }
        ]
      }
    ]
  },
