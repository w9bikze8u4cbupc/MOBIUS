{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "contractName": "mobius-storyboard-contract",
  "contractVersion": "1.0.0",
  "description": "Governing contract for MOBIUS storyboard outputs (Phase E2).",
  "type": "object",
  "required": [
    "storyboardContractVersion",
    "game",
    "resolution",
    "scenes"
  ],
  "properties": {
    "storyboardContractVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "game": {
      "type": "object",
      "required": ["slug", "name"],
      "properties": {
        "slug": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "resolution": {
      "type": "object",
      "required": ["width", "height", "fps"],
      "properties": {
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 },
        "fps": { "type": "number", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "scenes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "index",
          "segmentId",
          "type",
          "durationSec",
          "visuals",
          "overlays"
        ],
        "properties": {
          "id": { "type": "string" },
          "index": { "type": "integer", "minimum": 0 },
          "segmentId": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "intro",
              "components",
              "setup",
              "turn",
              "scoring",
              "end",
              "transition"
            ]
          },
          "durationSec": { "type": "number", "minimum": 0.5 },
          "visuals": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "assetId", "placement", "layer"],
              "properties": {
                "id": { "type": "string" },
                "assetId": { "type": "string" },
                "placement": {
                  "type": "object",
                  "required": ["x", "y", "width", "height"],
                  "properties": {
                    "x": { "type": "number" },
                    "y": { "type": "number" },
                    "width": { "type": "number" },
                    "height": { "type": "number" }
                  },
                  "additionalProperties": false
                },
                "layer": { "type": "integer", "minimum": 0 },
                "motion": {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["fade", "slide", "zoom", "pulse"]
                    },
                    "startSec": { "type": ["number", "null"] },
                    "endSec": { "type": ["number", "null"] },
                    "easing": {
                      "type": ["string", "null"],
                      "enum": ["linear", "easeInOutCubic", "easeOutQuad", null]
                    },
                    "from": {},
                    "to": {},
                    "anchor": {},
                    "minScale": { "type": ["number", "null"] },
                    "maxScale": { "type": ["number", "null"] },
                    "periodSec": { "type": ["number", "null"] },
                    "phaseOffsetSec": { "type": ["number", "null"] },
                    "repeatCount": { "type": ["integer", "null"] }
                  },
                  "additionalProperties": true
                }
              },
              "additionalProperties": false
            }
          },
          "overlays": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "text", "placement", "startSec", "endSec"],
              "properties": {
                "id": { "type": "string" },
                "text": { "type": "string" },
                "placement": {
                  "type": "object",
                  "required": ["x", "y", "width", "height"],
                  "properties": {
                    "x": { "type": "number" },
                    "y": { "type": "number" },
                    "width": { "type": "number" },
                    "height": { "type": "number" }
                  },
                  "additionalProperties": false
                },
                "startSec": { "type": "number", "minimum": 0 },
                "endSec": { "type": "number", "minimum": 0 }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
