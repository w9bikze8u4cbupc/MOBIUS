{
  "monitoring": {
    "duration_minutes": 60,
    "initial_poll_interval_seconds": 30,
    "regular_poll_interval_seconds": 120,
    "initial_phase_minutes": 5
  },
  "quality_gates": {
    "health_check": {
      "consecutive_failures_threshold": 2,
      "action": "auto-rollback",
      "description": "Health check failures - triggers rollback after N consecutive failures"
    },
    "extraction_failure_rate": {
      "threshold_percent": 5,
      "window_minutes": 10,
      "action": "auto-rollback",
      "description": "Extraction failure rate over time window"
    },
    "p95_hash_time": {
      "threshold_ms": 2000,
      "window_minutes": 15,
      "action": "auto-rollback",
      "description": "95th percentile hash processing time"
    },
    "queue_length": {
      "threshold": 1000,
      "queue_name": "low-confidence",
      "action": "auto-rollback",
      "description": "Queue length for low-confidence items"
    }
  },
  "notifications": {
    "webhook_url": "",
    "fallback_file": true,
    "escalation_after_minutes": 30
  },
  "environments": {
    "production": {
      "quality_gates": {
        "health_check": {
          "consecutive_failures_threshold": 2
        },
        "extraction_failure_rate": {
          "threshold_percent": 5,
          "window_minutes": 10
        },
        "p95_hash_time": {
          "threshold_ms": 2000,
          "window_minutes": 15
        },
        "queue_length": {
          "threshold": 1000
        }
      }
    },
    "staging": {
      "quality_gates": {
        "health_check": {
          "consecutive_failures_threshold": 3
        },
        "extraction_failure_rate": {
          "threshold_percent": 10,
          "window_minutes": 10
        },
        "p95_hash_time": {
          "threshold_ms": 3000,
          "window_minutes": 15
        },
        "queue_length": {
          "threshold": 1500
        }
      }
    },
    "development": {
      "quality_gates": {
        "health_check": {
          "consecutive_failures_threshold": 5
        },
        "extraction_failure_rate": {
          "threshold_percent": 15,
          "window_minutes": 5
        },
        "p95_hash_time": {
          "threshold_ms": 5000,
          "window_minutes": 10
        },
        "queue_length": {
          "threshold": 2000
        }
      }
    }
  },
  "tuning_guidance": {
    "health_check": {
      "conservative": "Set consecutive_failures_threshold to 1-2 for rapid detection",
      "balanced": "Set consecutive_failures_threshold to 2-3 for moderate tolerance",
      "permissive": "Set consecutive_failures_threshold to 4-5 for high tolerance"
    },
    "extraction_failure_rate": {
      "conservative": "Set threshold_percent to 1-3% for strict quality",
      "balanced": "Set threshold_percent to 3-7% for moderate tolerance",
      "permissive": "Set threshold_percent to 7-15% for development/testing"
    },
    "p95_hash_time": {
      "conservative": "Set threshold_ms to 1000-1500ms for strict performance",
      "balanced": "Set threshold_ms to 1500-2500ms for moderate tolerance",
      "permissive": "Set threshold_ms to 2500-5000ms for development/testing"
    },
    "queue_length": {
      "conservative": "Set threshold to 500-800 items for rapid scaling",
      "balanced": "Set threshold to 800-1200 items for moderate buffering",
      "permissive": "Set threshold to 1200-2000 items for high capacity"
    }
  }
}