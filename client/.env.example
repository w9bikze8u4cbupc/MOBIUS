# Environment variables for the Mobius Games Tutorial Generator

# Toggle to show/hide the tutorial component
# Set to true to show the tutorial, false to hide it
REACT_APP_SHOW_TUTORIAL=true

# Environment variables for the Mobius Tutorial Generator client
NODE_ENV=development
PORT=3001
REACT_APP_API_BASE=http://localhost:5002
REACT_APP_WS_URL=ws://localhost:5002/ws
# Disable host check to avoid allowedHosts issues
DANGEROUSLY_DISABLE_HOST_CHECK=true
# Set allowed hosts to localhost only
HOST=localhost
REACT_APP_QA_LABELS=true
REACT_APP_SHOW_DEV_TEST=false

# To hide the Tutorial Generator UI, set:
# REACT_APP_SHOW_TUTORIAL=false